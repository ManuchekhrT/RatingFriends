<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "@android:style/Theme.Holo.Light">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TitleSignIn" parent = "android:Widget.TextView">
        <item name="android:textSize">@dimen/TitleSignIn</item>
        <item name="android:textColor">@color/TitleColor</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TitleDescSignIn" parent = "android:Widget.TextView">
        <item name="android:textSize">@dimen/TitleDescSignIn</item>
        <item name="android:textColor">@color/TitleColor</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="FooterDescSignIn" parent = "android:Widget.TextView">
        <item name="android:textSize">@dimen/FooterDescSignIn</item>
        <item name="android:textColor">@color/TitleColor</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
